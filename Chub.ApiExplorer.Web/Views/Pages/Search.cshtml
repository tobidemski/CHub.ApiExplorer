@using Stylelabs.M.Sdk.Contracts.Base
@model List<Page>

<div class="user-results mt-4">

    <div class="row">
        @foreach (Page item in this.Model)
        {
            <div class="col-auto mb-4">

                <div class="card d-inline-flex">
                    <div class="d-flex flex-direction justify-content-center mt-4">
                        <i class="m-icon m-icon-file" style="font-size: 8rem; color: rgb(255, 193, 7);"></i>
                    </div>

                    <div class="card-body">
                        <h5 class="card-title">@(string.IsNullOrEmpty(item.Title) ? item.Name : item.Title)</h5>
                        <p class="card-text">Path: @item.Path</p>
                        <div class="card-footer-content">
                            <a asp-action="Page" asp-controller="Pages" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .user-results .card {
        height: 100%;
        width: 15rem;
    }

        .user-results .card .card-body {
            display: flex;
            flex-direction: column;
        }

    .user-results .card-footer-content {
        margin-top: auto;
    }
</style>